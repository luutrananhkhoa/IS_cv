{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@asset/*": ["./src/Asset/*"],
      "@component/*": ["./src/Component/*"],
      "@page/*": ["./src/Page/*"],
      "@context/*": ["./src/Context/*"],
      "@api/*": ["./src/Api/*"],
      "@middleware/*": ["./src/Middleware/*"],
      "@layout/*": ["./src/Layout/*"],
      "@constant/*": ["./src/Constant/*"],
      "@style/*": ["./src/Style/*"],
      "@locale/*": ["./src/Locale/*"],
      "@helper/*": ["./src/Helper/*"],
      "@contract/*": ["./src/Contract/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.d.js", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "dist", "build"]
}
